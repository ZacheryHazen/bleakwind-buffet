<!-- Name: Zachery Hazen
     Class: SpecificItemCustomization.xaml
     Purpose: Displays customization options for selected items from MenuSelectionComponent.
-->
    <UserControl x:Class="PointOfSale.SpecificItemCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="customizeTitleTextBlock" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center">
            Customize Item:
        </TextBlock>

        <StackPanel Name="customizationsStack" Grid.Row="1" />

        <Border Grid.Row="2" HorizontalAlignment="Center" Width="100" Padding="7">
            <Button Click="ExitWindow">
                Done
            </Button>
        </Border>
    </Grid>
</UserControl>
